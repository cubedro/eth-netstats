//- layout.jade
doctype html
html(ng-app="netStatsApp")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    title kTESTNET (kUSD)
    style(type="text/css") [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak { display: none !important; }
    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Montserrat:200,300,400,500,600"')
    link(rel='stylesheet', href='/css/netstats.min.css')
    script(src="//cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js")
  body
    div#particles-js.gradient-bg
    nav.class.navbar.navbar-toggleable-md.navbar-light.bg-faded(ng-controller='NavCtrl')
      .collapse.navbar-collapse#navbarSupportedContent
        ul.navbar-nav.nav
          li(ng-class="{active: pathName == '/'}")
            a.nav-link(href="/") Home
          li
            a.nav-link(href="/stats/") Stats
          li
            a.nav-link(href="http://faucet.testnet.kowala.io/",target="_blank") Coin faucet
          li
            a.nav-link(href="#") Chat (coming soon!)
        ul.nav.navbar-nav.navbar-right
          li
            a.nav-link(href="https://github.com/kowala-tech/kUSD", target="_blank") GitHub

    block content

    script(src="/js/netstats.min.js")
